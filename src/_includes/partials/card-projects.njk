<a href="/projects/{{ highlight.title | slugify }}" class="text-button card hover-shadow">
    {% if highlight.previewImage %}
        <img src="{{ highlight.previewImage }}" class="image" alt="Image"/>
    {% else %}
        <div class="image color-filler"></div>
    {% endif %}
    <div class="card-text">
        {{ highlight.title }}
    </div>
</a>
