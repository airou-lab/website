---
permalink: "/research/{{ project.title | slugify }}/"
layout: 'layouts/site.njk'
title: 'Research Spotlight'
pagination: 
    data: research
    size: 1
    alias: project
---

<div class="research page-content">
    <div class="research-spotlight">
        <a href="/research/">BACK TO RESEARCH</a>
        <h1>
            {{ project.title }}
        </h1>
        {% if project.github or project.docs %}
            <div class="links">
                {% if project.github %}
                    <a href='{{ project.github }}' class="text-button icon-button hover-shadow" id="github">
                        {% include "svg/github-mark.svg" %}
                        <div class="button-text">CODE</div>
                    </a>
                {% endif %}
                {% if project.docs %}
                    <a href='{{ project.docs }}' class="text-button icon-button hover-shadow" id="mdbooks">
                        {% include "svg/mdbooks.svg" %}
                        <div class="button-text">DOCS</div>
                    </a>
                {% endif %}
            </div>
        {% endif %}
        {% renderFile["src/_includes/", project.page] | join %}
    </div>
</div>
